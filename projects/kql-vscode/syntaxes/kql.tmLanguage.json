{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "KQL",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#annotations"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.kql",
          "begin": "//",
          "end": "$",
          "patterns": [
            {
              "name": "comment.kql",
              "match": ".*"
            }
          ]
        },
        {
          "name": "comment.block.kql",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "name": "comment.kql",
              "match": "(?!\\*/)."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kql",
          "match": "\\b(struct|enum|let|namespace|type)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.kql",
          "match": "\\b(String|i32|i64|f32|f64|bool|DateTime|UUID|Key|ForeignKey|List)\\b"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "keyword.operator.annotation.kql",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*(\\([^)]*\\))?"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kql",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kql",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.kql",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.kql",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.kql",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.float.kql",
          "match": "\\b\\d+\\.\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.kql",
          "match": "[+\\-*/%=&|<>!?:]+"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.kql",
          "match": "[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    }
  }
}
